{% if usage|lower == 'framework' %}
  {% set template_namespace = '@phpManufaktur/Basic/Template' %}
  {% set template_file = 'framework/body.twig' %}
{% elseif usage|lower == 'syncdata' %}
  {% set template_namespace = '@phpManufaktur/ConfirmationLog/Template' %}
  {% set template_file = 'backend/syncdata.body.twig' %}
{% else %}
  {% set template_namespace = '@phpManufaktur/ConfirmationLog/Template' %}
  {% set template_file = 'backend/body.twig' %}
{% endif %}
{% extends getTemplateFile(template_namespace, template_file) %}

{% block content %}
  <div class="about_container">
    <div class="logo_container">
      <img src="{{ MANUFAKTUR_URL ~ '/ConfirmationLog/Template/default/backend/image/confirmationlog.jpg' }}" width="200" height="200" alt="ConfirmationLog" />
    </div>
    <div class="extension">
      <div class="item name">{{ extension.name }}</div>
      <div class="item release">Release {{ extension.release.number }} - <i>{{ extension.release.date|date('d.m.Y') }}</i></div>
      {% if (locale == 'de') and (extension.description.de.long is defined) %}
        <div class="item description">{{ extension.description.de.long }}</div>
      {% else %}
        <div class="item description">{{ extension.description.en.long }}</div>
      {% endif %}
        <div class="item copyright">Copyright &copy; {{ extension.release.date|date('Y') }} by {{ extension.vendor }}</div>
    </div>
    <div class="clear"></div>
  </div>
{% endblock content %}

