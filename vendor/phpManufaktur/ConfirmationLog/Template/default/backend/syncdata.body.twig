{% spaceless %}
  <div id="confirmation_container">
    <ul id="toolbar">
      {% for item in toolbar %}
        <li{% if item.active %} class="active"{% endif %}><a href="{{ item.link }}" title="{{ item.hint|trans }}">{{ item.text|trans }}</a></li>
      {% endfor %}
    </ul>
    <div id="confirmation_content">
      {% block content %}
      {% endblock content %}
    </div>
  </div>  
{% endspaceless %}